{
    "name": "ssn/mycontacts",
    "description": "my contacts",
    "type": "project",
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpunit/phpunit": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Santosh Nair"
        }
    ],
    "require": {
        "php": ">=8.4",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.9",
        "twbs/bootstrap-icons": "^1.13"
    },
    "scripts": {
        "migrate": "php database/migrate.php",
        "rollback" : "php database/rollback.php",
        "seed": "php database/seed.php",
        "truncate": "php database/truncate.php",
        "test": "./vendor/bin/phpunit --colors=always",
        "test-unit": "./vendor/bin/phpunit --testsuite unit --colors=always",
        "test-integration": "./vendor/bin/phpunit --testsuite integration --colors=always",
        "csfix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cscheck": "./vendor/bin/phpcs --report=summary"
    }
}
